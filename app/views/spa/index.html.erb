<!-- Product cart template-->
<script id="cartProduct_tpl" type="text/x-handlebars-template">
	<tr>
		<td>{{orderItem.product.name}}</td>
		<td><input type="button" value="-" class="decreaseItem"/>{{orderItem.quantity}}<input type="button" value="+" class="increaseItem"/></td>
		<td>{{orderItem.product.price}}</td>
		<td>{{totalPrice}}</td>
		<td><input type="button" class="removeFromCart" value="x" /></td>
	</tr>
</script>

