<script id="searchForm_tpl" type="text/x-handlebars-template">
	<div>
		<form class="searchForm" method="get">
			<label for="productName"> In product name: </label>
			<input type="text" name="productName" />
			<label for="productDescription"> In product description; </label>
			<input type="text" name="productDescription" />
			<label for="priceLt"> Price less than: </label>
			<input type="text" name="priceLt" />
			<label for="priceGt"> Price greater than: </label>
			<input type="text" name="priceGt" />
			<input type="button" value="search" class="submitSearch" onClick="useCase.search(this.form)" />
		</form>
	</div>	
</script>
